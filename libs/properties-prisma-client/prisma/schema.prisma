generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("PROPERTY_DATABASE_URL")
}

model Property {
  id           Int     @id @default(autoincrement())
  propertyName String
  propertyType String
  noOfUnits    Int
  userEmails   Email[]
}

model Email {
  id         Int      @id @default(autoincrement())
  Property   Property @relation(fields: [propertyId], references: [id])
  propertyId Int
  email      String
}
